<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ImageView android:id="@+id/background" android:layout_width="fill_parent" android:scaleType="fitXY"
        android:layout_height="fill_parent" android:src="@drawable/login"
        android:layout_gravity="center|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/LoginNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:background="#00000000"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="240dp"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="5"
        android:textColor="#FFFFFF"
        android:maxWidth="180dp"
        android:background="#00000000"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="280dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/btn_register"
        android:background="@drawable/login_selector"
        android:layout_marginTop="46dp"
        android:onClick="registerAccount"
        android:layout_below="@+id/passwordField"
        android:layout_toStartOf="@+id/btn_login"
        android:layout_marginEnd="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/btn_login"
        android:background="@drawable/login_selector"
        android:onClick="login"
        android:layout_alignTop="@+id/btn_register"
        android:layout_alignEnd="@+id/passwordField" />

</RelativeLayout>
