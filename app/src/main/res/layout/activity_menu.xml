<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghost.canyouseeme.MenuActivity">

    <ImageView android:id="@+id/bg" android:layout_width="fill_parent" android:scaleType="fitXY"
        android:layout_height="fill_parent" android:src="@drawable/mainbg"
        android:layout_gravity="center|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/roomName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <fragment
        android:id="@+id/map"
        android:layout_below="@id/roomName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"/>

</RelativeLayout>
